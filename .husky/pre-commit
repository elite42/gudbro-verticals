# Run lint-staged for formatting and linting
npx lint-staged

# Run typecheck on modified TypeScript files
# Note: TypeScript needs full project context, so we check if any .ts/.tsx files were staged
STAGED_TS_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(ts|tsx)$' || true)

if [ -n "$STAGED_TS_FILES" ]; then
  echo "TypeScript files staged - running typecheck..."
  pnpm turbo typecheck --filter=./apps/backoffice --filter=./apps/coffeeshop/frontend 2>&1 | tail -15

  if [ $? -ne 0 ]; then
    echo ""
    echo "TypeScript errors found! Fix them before committing."
    echo "Run 'pnpm turbo typecheck' to see all errors."
    exit 1
  fi
  echo "Typecheck passed!"
fi
