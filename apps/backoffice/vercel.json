{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": "nextjs",
  "outputDirectory": ".next",
  "installCommand": "cd ../.. && pnpm install",
  "buildCommand": "cd ../.. && pnpm turbo build --filter=backoffice",
  "regions": ["fra1", "iad1"],
  "git": {
    "deploymentEnabled": {
      "main": true,
      "staging": true
    }
  },
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 30,
      "memory": 1024
    },
    "app/api/ai/**/*.ts": {
      "maxDuration": 60,
      "memory": 3008
    }
  },
  "crons": [
    {
      "path": "/api/notifications/process",
      "schedule": "0 8 * * *"
    },
    {
      "path": "/api/maintenance/archive",
      "schedule": "0 3 * * 0"
    },
    {
      "path": "/api/maintenance/refresh-views",
      "schedule": "*/15 * * * *"
    },
    {
      "path": "/api/health/alerts",
      "schedule": "*/5 * * * *"
    }
  ]
}
